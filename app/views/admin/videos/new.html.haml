= render 'shared/errors', obj: @video
%section.admin_add_video
  .container
    .col-md-10.col-md-offset-1
      = form_for [:admin, @video], html: { class: "form-horizontal" } do |f|
        %ul.nav.nav-tabs
          %li
            = link_to "Recent Payments", admin_payments_path
          %li.active
            %a(href="") Add a New Video
        %br
        %fieldset
          .form-group
            = f.label :title, class: "col-sm-3 control-label"
            .col-sm-3
              = f.text_field :title, class: "form-control"
          .form-group
            = f.label :category, class: "col-sm-3 control-label"
            .col-sm-6
              = f.select :category_id, options_for_select(Category.all.pluck(:name, :id)), class: "form-control"
          .form-group
            = f.label :description, class: "control-label col-sm-3"
            .col-sm-6
              = f.text_area :description, rows: 8, class: "form-control"
          .form-group
            = f.label :large_cover, class: "control-label col-sm-3"
            .col-sm-6
              %col.btn.btn-file
                = f.file_field :large_cover, class: "form-control"
          .form-group
            = f.label :small_cover, class: "control-label col-sm-3"
            .col-sm-6
              %col.btn.btn-file
                = f.file_field :small_cover, class: "form-control"
          .form-group
            = f.label :file_name, class: "control-label col-sm-3"
            .col-sm-6
              = f.text_field :file_name, class: "form-control"

        %fieldset.actions.form-group
          .col-sm-6.col-md-offset-3
            = f.submit "Add Video", class: "btn btn-default"
